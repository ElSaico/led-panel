{
  "name": "led-panel",
  "version": "0.1.0",
  "description": "Simulate a (possibly animated) LED text display",
  "homepage": "https://github.com/ElSaico/led-panel",
  "bugs": {
    "url": "https://github.com/ElSaico/led-panel/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ElSaico/led-panel.git"
  },
  "license": "ISC",
  "author": "Bruno Marques <bruno@bmarques.net> (https://github.com/ElSaico)",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "files": [
    "dist/src/"
  ],
  "scripts": {
    "prepublishOnly": "npm run clean && npm run compile",
    "ava": "ava -v",
    "clean": "rimraf --no-glob dist",
    "compile": "tsc",
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "docs": "docs-ts",
    "lint": "eslint --ext ts . package.json",
    "lint:fix": "eslint --ext ts --fix . package.json",
    "lint-staged": "lint-staged",
    "prettier": "prettier --list-different src/**/*.ts test/**/*.ts",
    "prettier:fix": "prettier --write src/**/*.ts test/**/*.ts",
    "test": "nyc ava",
    "posttest": "npm run docs"
  },
  "dependencies": {
    "@svgdotjs/svg.js": "3.1.1",
    "lodash": "4.17.21"
  },
  "devDependencies": {
    "@ericcrosson/eslint-config": "^2.0.0",
    "@types/lodash": "4.14.175",
    "@types/node": "^14.14.17",
    "@typescript-eslint/eslint-plugin": "^4.11.1",
    "@typescript-eslint/parser": "^4.11.1",
    "ava": "^3.14.0",
    "ava-fast-check": "^4.0.0",
    "codecov": "^3.8.1",
    "docs-ts": "^0.5.3",
    "eslint": "^7.16.0",
    "eslint-config-prettier": "^6.6.0",
    "eslint-plugin-ava": "^10.2.0",
    "eslint-plugin-fp-ts": "^0.2.1",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-json-format": "^2.0.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-security": "^1.4.0",
    "fast-check": "^2.10.0",
    "lint-staged": "^10.5.3",
    "nyc": "^15.1.0",
    "pre-commit": "^1.2.2",
    "prettier": "2.2.1",
    "rimraf": "^3.0.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.3.5"
  },
  "pre-commit": "lint-staged",
  "ava": {
    "extensions": [
      "ts"
    ],
    "files": [
      "!dist/**/*.d.ts",
      "test/**/test-*.ts"
    ],
    "require": [
      "ts-node/register"
    ]
  }
}
